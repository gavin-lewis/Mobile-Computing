<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="79dp"
        android:layout_y="99dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="102dp" />

    <EditText
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="78dp"
        android:layout_y="163dp"
        android:ems="10"
        android:hint="RollNo."
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="176dp" />

    <Button
        android:id="@+id/insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="133dp"
        android:layout_y="249dp"
        android:onClick="insert"
        android:text="Insert"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="333dp" />

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="135dp"
        android:layout_y="405dp"
        android:onClick="show"
        android:text="Show"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="442dp" />

    <TextView
        android:id="@+id/display"
        android:layout_width="243dp"
        android:layout_height="193dp"
        android:layout_x="72dp"
        android:layout_y="487dp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="511dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="134dp"
        android:layout_y="325dp"
        android:onClick="delete"
        android:text="Delete" />

</AbsoluteLayout>